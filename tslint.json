{
    /*"rulesDirectory": "built/local/tslint",*/
    "extends": "tslint:recommended",
    "rules": {
        "completed-docs": true,
        "comment-format": [true,
            "check-space"
        ],
        "indent": [true,
            "spaces"
        ],
        "jsdoc-format": true,
        "linebreak-style": [true, "unix"],
        "no-internal-module": true,
        "no-switch-case-fall-through": true,
        "one-variable-per-declaration": false,
        "ordered-imports": false,
        "prefer-const": true,
        "quotemark": [true,
            "single",
            "avoid-escape"
        ],
        "triple-equals": true
    }
}
